@model EMS.UserManagement.Areas.Admin.Models.AddUserModel

<div class="container-fluid" style="padding-top: 100px;">
    <h1>Create User</h1>
    <div class="row">
        <form asp-action="Add" method="post" class="form" role="form">
            <div class="col-xs-12">
                <div class="form-group">
                    @Html.EditorFor(x => x.FullName, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = Html.DisplayNameFor(x => x.FullName)
                        },
                    })
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    @Html.EditorFor(x => x.EmailAddress, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = Html.DisplayNameFor(x => x.EmailAddress)
                        },
                    })
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    @Html.EditorFor(x => x.PhoneNumber, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = Html.DisplayNameFor(x => x.PhoneNumber)
                        },
                    })
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    @Html.EditorFor(x => x.UserName, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = Html.DisplayNameFor(x => x.UserName)
                        },
                    })
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    @Html.DropDownListFor(x => x.ManagerId,
                        ViewBag.Users as IEnumerable<SelectListItem>,
                        "-- Manager --",
                        new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                placeholder = Html.DisplayNameFor(x => x.ManagerId)
                            },
                        })
                </div>
            </div>

            <div class="col-xs-12">
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>